@using Abp.Web.Mvc.Extensions
@using Wind.Northwind.Authorization
@using Abp.Application.Services.Dto

@model Wind.Northwind.Web.Models.Roles.RoleListViewModel
@{
    ViewBag.Title = "Index";
}

@section styles{    
    @Html.IncludeStyle("~/Scripts/jtable/themes/metro/blue/jtable.min.css")
    @Html.IncludeStyle("~/Content/jsTree/themes/default/style.min.css")
}

@section Scripts
{
    @Html.IncludeScript("~/Views/Roles/_PermissionTree.js")
    @Html.IncludeScript("~/Views/Roles/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Views/Roles/Index.js")
}

<div id="RolesTable"></div>

<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("Roles")</span> <small>@L("RolesHeaderInfo")</small>
                </h1>
            </div>
        </div>
    </div>
    <div class="col-xs-6 text-right">
        @if (IsGranted(PermissionNames.Pages_Users))
        {
            <button id="CreateNewRoleButton" class="btn btn-primary blue"><i class="fa fa-plus"></i> @L("CreateNewRole")</button>
        }
    </div>

    <div class="col-xs-6">
        @Html.DropDownList("PermissionSelectionCombobox", Model.Permissions.Select(i => i.ToSelectListItem()),
       new {
           @class = "form-control selectpicker",
           data_live_search = "true",
           data_none_selected_text = L("FilterByPermission"),
           id = "PermissionSelectionCombo"
       })
    </div>
</div>
